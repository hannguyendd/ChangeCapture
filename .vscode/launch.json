{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".Product Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/ProductService/bin/Debug/net9.0/ProductService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ProductService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".Search Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/SearchService/bin/Debug/net9.0/SearchService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/SearchService",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "All Services",
      "configurations": [".Product Service", ".Search Service"],
      "stopAll": true
    }
  ]
}
